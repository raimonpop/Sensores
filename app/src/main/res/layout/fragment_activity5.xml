<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Activity5.Activity5Fragment">

    <EditText
        android:id="@+id/speech_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Escribe algo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/speech_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="Hablar"

        app:layout_constraintStart_toStartOf="@id/speech_text_input"
        app:layout_constraintTop_toBottomOf="@id/speech_text_input" />

    <Button
        android:id="@+id/hello_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="6dp"
        android:text="Hola"
        app:layout_constraintStart_toEndOf="@id/speech_button"
        app:layout_constraintTop_toBottomOf="@id/speech_text_input"
        tools:layout_editor_absoluteX="194dp" />

    <Button
        android:id="@+id/goodbye_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="Adios"
        app:layout_constraintStart_toEndOf="@id/hello_button"
        app:layout_constraintTop_toBottomOf="@id/speech_text_input" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="Stop"
        app:layout_constraintStart_toStartOf="@id/speech_button"
        app:layout_constraintTop_toBottomOf="@id/speech_button" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="Start"
        app:layout_constraintStart_toEndOf="@id/stop_button"
        app:layout_constraintTop_toBottomOf="@id/speech_button" />
</androidx.constraintlayout.widget.ConstraintLayout>